{
  "name": "aoc-2020",
  "version": "1.0.0",
  "description": "simple repo for aoc 2020",
  "keywords": [
    "aoc",
    "adventofcode"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/cemusta/aoc-2020"
  },
  "license": "MIT",
  "author": "Cem Usta",
  "main": "src/index.js",
  "scripts": {
    "codecov": "codecov",
    "coverage": "cross-env SILENT_LOGS=true jest --collectCoverage",
    "dev": "nodemon ./src",
    "lint": "eslint .",
    "start": "ts-node ./src/index.ts",
    "test": "cross-env SILENT_LOGS=true jest --verbose",
    "test:changes": "cross-env SILENT_LOGS=true jest -o",
    "test:logs": "jest",
    "validate": "npm-run-all lint test:changes"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run validate"
    }
  },
  "dependencies": {
    "dotenv": "^8.4.0"
  },
  "devDependencies": {
    "@types/node": "^15.14.0",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "codecov": "^3.8.2",
    "cross-env": "^7.0.3",
    "eslint": "^7.29.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "husky": "^7.0.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.9",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^26.5.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  }
}
